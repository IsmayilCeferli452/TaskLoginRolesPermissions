@model LoginVM

@{
    ViewData["Title"] = "SignIn";
}

<section id="login" style="height:500px;">
    <div class="container mt-5">
        <h1 class="text-center">Sign In</h1>
        <div class="text-danger" style="width:50%; margin:0 auto;" asp-validation-summary="ModelOnly"></div>
        <div class="register-form" style="width:50%; margin:0 auto;">
            <form method="post" asp-action="SignIn">
                <div class="form-group mb-3">
                    <label>Email or username</label>
                    <input asp-for="EmailOrUsername" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
                </div>
                <div class="form-group mb-3">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <a asp-action="SignUp">Go to Sign Up</a>
            </form>
        </div>
    </div>
</section>

