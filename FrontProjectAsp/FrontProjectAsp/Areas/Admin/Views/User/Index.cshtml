@model List<UserRoleVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h2 class="text-center">Users</h2>
    <div class="create-operation">
        <a asp-action="AddRole" class="btn btn-success text-white btn-sm">Add role</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Fullname
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Roles
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="category-data">
                        <td class="py-1">
                            @item.Fullname
                        </td>
                        <td>
                            @item.Username
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Roles
                        </td>
                    </tr>
                }
            </tbody>
        </table>

